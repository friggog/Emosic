    \put(\LenToUnit{-35pt},\LenToUnit{-\FGruleroffset}){%left ruler
      \FGruler{\FGrulercount}}
    \put(\LenToUnit{518pt},\LenToUnit{-\FGruleroffset}){%right ruler
      \FGruler{\FGrulercount}}
